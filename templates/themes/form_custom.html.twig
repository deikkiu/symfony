{% use 'form_div_layout.html.twig' %}

{% block form_errors %}
    {% if errors|length > 0 %}
        <div class='errors'>
            {% for error in errors %}
                <span>{{ error.message }}</span>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}

{% block template_widget %}
    <div class={{ class|default('flex-row') }}>
        {% set type = type|default('integer') %}
        {% block form_widget %}
            {{ parent() }}

            {% if unit is defined %}
                <span>{{ unit }}</span>
            {% endif %}
        {% endblock %}
    </div>
{% endblock %}

