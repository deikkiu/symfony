{% extends "base.html.twig" %}

{% block title %}Card{% endblock %}

{% block content %}
    <h1>Cart</h1>

    <br/>

    {% if quantity is not empty %}
        <h4>Total price: {{ totalPrice|price }}</h4>
        <h5 class="mt-1">Quantity: {{ quantity }}</h5>
    {% endif %}

    {% if products is not empty %}
        <div class="cards">
            {% for product in products %}
                {% include 'incs/productCart.html.twig' %}
            {% endfor %}
        </div>
    {% else %}
        <br/>
        <p>The list of products in cart is empty</p>
    {% endif %}
{% endblock %}
