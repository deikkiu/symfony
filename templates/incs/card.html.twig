<div class="card">
    <div class="card__info">
        <p>Id: {{ product.id }}</p>
        <p>Name: {{ product.name }}</p>
        <p>Category: {{ product.category.name }}</p>
        <p>Slug: {{ product.slug }}</p>
        {% if product.colors|length %}
            <div class="card__colors">
                <span>Colors:</span>
                {% for color in product.colors %}
                    <span>{{ color.name }}</span>
                {% endfor %}
            </div>
        {% endif %}
        <p>Price: {{ product.price|price }}</p>
        <p>Amount: {{ product.amount }}</p>
        <p>Description: {{ product.descr }}</p>
        <p>Product attributes</p>
        <p>Volume: {{ volume(product.productAttr.length, product.productAttr.width, product.productAttr.height) }}</p>
        <p>Weight: {{ product.productAttr.weight }} g</p>
    </div>
    <div>
        {% block buttons %}
            <a href="{{ path('product_update', {'slug': product.slug}) }}">
                Update product
            </a>
            <a href="{{ path('product_delete', {'id': product.id}) }}">
                Delete product
            </a>
        {% endblock %}
    </div>
</div>


